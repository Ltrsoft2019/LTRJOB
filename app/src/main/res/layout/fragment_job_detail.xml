<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardBackgroundColor="#08914F">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img1"
                android:text="Full Time"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_type"
                android:layout_marginLeft="50dp"
                android:text="Wipro"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/job_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/company_name"
                android:layout_marginLeft="50dp"
                android:text="Devlopment Role"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/wiprologo" />/
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

<!--                    <Button-->
<!--                        android:id="@+id/jobDis"-->
<!--                        android:layout_width="160dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_marginLeft="5dp"-->
<!--                        android:text="Job Discription"-->
<!--                        android:backgroundTint="#fff"-->
<!--                        android:textColor="#000"/>-->

<!--                    <Button-->
<!--                        android:id="@+id/com"-->
<!--                        android:layout_width="160dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_marginRight="5dp"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:text="Company Discription"-->
<!--                        android:backgroundTint="#fff"-->
<!--                        android:textColor="#000"/>-->

<!--                </RelativeLayout>-->

                    <TextView
                        android:id="@+id/ttt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:text="Job Detail :"/>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ttt"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/desc"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Requirements"/>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/txt2"
                    android:textSize="16dp"
                    android:text="Skill's:"/>

                <TextView
                    android:id="@+id/skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@+id/txt3"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/skill"
                    android:textSize="16dp"
                    android:text="Eligible:"/>

                <TextView
                    android:id="@+id/eligible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@+id/txt5"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/eligible"
                    android:textSize="16dp"
                    android:text="Location:"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@+id/txt7"
                    android:textSize="14dp" />

                    <TextView
                        android:id="@+id/d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/location"
                        android:text="Company Detail :"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/com_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/d"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/com_desc"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Location:"/>


                    <TextView
                        android:id="@+id/com_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="60dp"
                        android:layout_below="@+id/a"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/com_location"
                        android:textSize="16dp"
                        android:text="Contact:"/>

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="60dp"
                        android:layout_below="@+id/c"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/contact_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="60dp"
                        android:layout_below="@+id/contact"
                        android:textSize="14dp"/>



                    <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_email"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:text="Apply Now"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>





    </RelativeLayout>

</ScrollView>