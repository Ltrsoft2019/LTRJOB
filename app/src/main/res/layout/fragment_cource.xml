    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#18613E"
        android:layout_width="match_parent"
        android:layout_height="180dp">




        <TextView
            android:layout_width="182dp"
            android:layout_marginTop="25dp"
