<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="#117015">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="50dp"
            android:layout_marginLeft="230dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:id="@+id/course__type"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:textColor="#fff">
        </TextView>

        <TextView
            android:id="@+id/course__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp">

        </TextView>

        <TextView
            android:id="@+id/course_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="125dp">

        </TextView>

        <TextView
            android:id="@+id/fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="23dp"
            android:textColor="#fff">
        </TextView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:id="@+id/discryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp">

        </TextView>

        <TextView
            android:id="@+id/course_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
            android:layout_marginTop="215dp"
            android:textSize="25dp" >

        </TextView>

        <TextView
            android:id="@+id/include_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="15dp" >

        </TextView>

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
             android:layout_marginLeft="15dp"
            android:layout_marginTop="330dp" >

        </TextView>

        <Button
            android:id="@+id/apply_now"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="𝐀𝐩𝐩𝐥𝐲 𝐧𝐨𝐰"
            android:paddingTop="1dp"
            android:textSize="25dp"
            android:backgroundTint="#F45D2E"
            android:layout_marginTop="200dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>