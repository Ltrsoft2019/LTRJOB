<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_CardView"
    android:layout_weight="1">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_8dp"
        app:cardMaxElevation="@dimen/dimen_10dp"
        android:layout_weight="1"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:background="@drawable/cr"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_10dp"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_45dp"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_23dp"
                android:src="@drawable/java"/>

            <TextView
                android:id="@+id/coursename"
                android:layout_width="180dp"
                android:layout_height="22dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@id/image"
                android:layout_toRightOf="@id/image"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="@dimen/dimen_45dp"
                android:layout_toEndOf="@id/image"
                android:layout_toRightOf="@id/image"
                android:textFontWeight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!--            <ImageView-->
<!--                android:id="@+id/image"-->
<!--                android:layout_width="@dimen/dimen_100dp"-->
<!--                android:layout_height="@dimen/dimen_100dp"-->
<!--                android:layout_marginStart="@dimen/dimen_10dp"-->
<!--                android:layout_marginLeft="@dimen/dimen_10dp"-->
<!--                android:layout_marginTop="@dimen/dimen_10dp"-->
<!--                android:layout_marginEnd="@dimen/dimen_10dp"-->
<!--                android:layout_marginRight="@dimen/dimen_10dp"-->
<!--                android:layout_marginBottom="@dimen/dimen_10dp"-->

<!--                android:padding="5dp">-->

<!--            </ImageView>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:layout_marginStart="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_10dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duretion :"
                android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_45dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_80dp"/>


            <TextView
                android:id="@+id/coursetype"
                android:layout_width="@dimen/dimen_170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="@dimen/dimen_80dp"
                android:textFontWeight="1"
                android:layout_toEndOf="@id/image"
                android:layout_toRightOf="@id/image"
                android:textSize="15dp"
                android:drawablePadding="@dimen/dimen_2dp">


            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>