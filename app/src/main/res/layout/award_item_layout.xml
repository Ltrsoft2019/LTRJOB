<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardElevation="@dimen/dimen_8dp"
    app:cardMaxElevation="@dimen/dimen_10dp"
    android:background="#F2F2F2"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_award"
        android:layout_width="@dimen/dimen_349dp"
        android:layout_height="@dimen/dimen_280dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_30dp"
        app:cardCornerRadius="20dp">


        <!--        <ImageView-->
        <!--            android:layout_width="300dp"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:background="@drawable/certiblack" />-->

        <TextView
            android:id="@+id/award_title"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_50dp"

            />

        <TextView
            android:id="@+id/award_description"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_100dp"

            />

        <TextView
            android:id="@+id/certification_year"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_150dp"

            />

        <TextView
            android:id="@+id/award_date"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_150dp"

            />

        <TextView
            android:id="@+id/award_level_name"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_200dp"

            />



    </androidx.cardview.widget.CardView>



</LinearLayout>