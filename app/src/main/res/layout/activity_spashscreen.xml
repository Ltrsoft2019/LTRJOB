<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4004323"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ltr"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_110dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/ltr" />

    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/dimen_360dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:fontFamily="@font/adamina"
        android:text="LTR SOFT PVT.LTD"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_35sp" />

    <TextView
        android:id="@+id/discription"
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="Live Trendy.Reliable"
        android:textColor="#C9DADADA"
        android:textSize="@dimen/dimen_25sp"
        android:textStyle="bold" />


</LinearLayout>
