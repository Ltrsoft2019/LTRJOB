            <TextView
                android:id="@+id/certification_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/work_exp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amethysta"
                android:text="Certifications"
                android:textColor="#18613E"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sq"
                android:padding="10dp"
                android:layout_below="@+id/certification_txt"
