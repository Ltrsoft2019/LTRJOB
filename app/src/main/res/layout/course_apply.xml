<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    >

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@drawable/ring1_bg"/>

    <TextView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-225dp"
        android:layout_gravity="center"
        android:background="@drawable/ring2_bg" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-175dp"
        android:layout_gravity="center"
        android:background="@drawable/ring3_bg" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/congratulation"
        android:layout_marginTop="-125dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="𝓒𝓸𝓷𝓰𝓻𝓪𝓽𝓾𝓵𝓪𝓽𝓲𝓸𝓷!"
        android:textColor="#18613E"
        android:textSize="50dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:text="You have successfully enrolled for this course"
        android:textSize="25dp" />

    <Button
        android:id="@+id/apply"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:backgroundTint="#F45D2E"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Apply"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/home_page"
        android:text="ᴳᵒ ᵗᵒ ʰᵒᵐᵉ"
        android:layout_gravity="center"
        android:textColor="#18613E"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>



</LinearLayout>