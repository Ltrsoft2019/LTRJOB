<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/course_card"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/dr"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#EFF6FC"
        app:cardCornerRadius="20dp">


        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="150dp"-->
        <!--            android:layout_marginTop="40dp"-->
        <!--            android:fontFamily="@font/adamina"-->
        <!--            android:text="Morning"-->
        <!--            android:textColor="#18613E"-->
        <!--            android:textSize="16sp" />-->

        <TextView
            android:id="@+id/batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/adamina"
            android:text="Java"
            android:textColor="@color/black"
            android:textSize="30sp" />



        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/adamina"
            android:text="10:00am"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/adamina"
            android:text="Batch Time :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/adamina"
            android:text="Start Date :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/adamina"
            android:text="10/01/2024"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/adamina"
            android:text="End Date :"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/adamina"
            android:text="10/04/2024"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>
