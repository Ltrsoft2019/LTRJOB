<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/course_card"
        android:layout_width="@dimen/dimen_350dp"
        android:layout_height="@dimen/dimen_150dp"
        android:layout_gravity="center"
        android:background="@drawable/dr"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:cardBackgroundColor="#EFF6FC"
        app:cardCornerRadius="@dimen/dimen_20dp">


        <TextView
            android:id="@+id/batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:fontFamily="@font/adamina"
            android:text="Java"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30sp" />



        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_220dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/adamina"
            android:text="10:00am"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_120dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/adamina"
            android:text="Batch Time :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_120dp"
            android:layout_marginTop="@dimen/dimen_65dp"
            android:fontFamily="@font/adamina"
            android:text="Start Date :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_220dp"
            android:layout_marginTop="@dimen/dimen_65dp"
            android:fontFamily="@font/adamina"
            android:text="10/01/2024"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_120dp"
            android:layout_marginTop="@dimen/dimen_110dp"
            android:fontFamily="@font/adamina"
            android:text="End Date :"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_220dp"
            android:layout_marginTop="@dimen/dimen_110dp"
            android:fontFamily="@font/adamina"
            android:text="10/04/2024"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>
