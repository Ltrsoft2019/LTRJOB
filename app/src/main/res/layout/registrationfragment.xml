<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ltr_soft_logo_removebg_preview"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOB SEEKER"
        android:textColor=" #F45D2E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/adamina"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Create an account"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:hint="First Name"
        android:paddingStart="5dp"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/lname"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:hint="Last Name"
        android:inputType="text"
        android:textSize="16sp"
        android:paddingStart="5dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="220dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:hint=" Phone no"
       android:inputType="phone"
        android:paddingStart="5dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginPassword1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:passwordToggleEnabled="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:hint=" Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/conform_password1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confermpass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/square"
            android:inputType="textPassword"
            android:hint="Confirm password"
            android:layout_marginTop="20dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#F45D2E"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textColor=" #F45D2E"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>
