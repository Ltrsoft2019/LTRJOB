<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:id="@+id/dasboard_layout"
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <TextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            android:background="@drawable/cr"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_20dp"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/dimen_55dp"
            android:layout_height="@dimen/dimen_55dp"
            android:layout_marginLeft="@dimen/dimen_28dp"
            android:layout_marginTop="@dimen/dimen_35dp"/>


<!--        <ImageView-->
<!--            android:id="@+id/image1"-->
<!--            android:layout_width="112dp"-->
<!--            android:layout_height="106dp"-->
<!--             android:layout_marginTop="@dimen/dimen_10dp"-->
<!--            android:layout_marginLeft="@dimen/dimen_10dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:text="title :"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/newsposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:text="FULL TIME"
            android:textColor="#B4F1BE"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="50dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/news_company_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="45dp"
            android:text="Wipro"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="80dp"
            android:text="Desc :"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="80dp"
            android:text="Development Role"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="120dp"
            android:text="Apply on  :"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/news_applied_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="120dp"
            android:text="18 sept 2023"
            android:textColor="#000000"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>