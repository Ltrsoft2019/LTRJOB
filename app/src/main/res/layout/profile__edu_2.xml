<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/download"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="45dp"
        app:srcCompat="@drawable/back"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="330dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#18613E" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="345dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#18613E"
        app:cardCornerRadius="30dp"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="49dp"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="28dp"
            android:text="COMPLETE YOUR PROFILE"
            android:textColor="#ECE7E7"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Education Information"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:text="10th class"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:id="@+id/school_name"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/square"
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:gravity="center"
        android:hint="School Name"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/select_10th_board"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/square"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:autofillHints="Select 10th Board"
        android:textSize="14dp"/>


    <Spinner
        android:id="@+id/passing_year"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/square"
        android:autofillHints="Passing Year"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/percentage10th"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/square"
        android:layout_gravity="center"
        android:hint="Percentage"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:maxLength="4"
        android:digits="0123456789."
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add More +"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#18613E" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:text="12th class"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:id="@+id/college"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/square"
        android:padding="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:gravity="center"
        android:hint="College Name"
        android:textSize="14dp"/>

        <Spinner
            android:id="@+id/select_field"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:autofillHints="Select Field"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="14dp"/>

        <Spinner
            android:id="@+id/select_12th_board"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:autofillHints="Passing Year"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="14dp"/>

        <Spinner
            android:id="@+id/college_passing_year"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:autofillHints="College Passing Year"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/percentage12th"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:maxLength="4"
            android:digits="0123456789."
            android:gravity="center"
            android:hint="Percentage"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More +"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#18613E" />


        <TextView
            android:layout_width="123dp"
            android:layout_height="32dp"
            android:text="Degree"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"/>

        <EditText
            android:id="@+id/Institude_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:gravity="center"
            android:hint="Institute Name"
            android:textSize="14dp"/>

        <Spinner
            android:id="@+id/select_degree"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:autofillHints="Select Degree"
            android:textSize="14dp"/>

        <Spinner
            android:id="@+id/dpassing_year"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:autofillHints="Passing Year"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:layout_gravity="center"
            android:hint="Percentage"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="4"
            android:digits="0123456789."
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More +"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#18613E" />





        <Button
        android:id="@+id/save"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#F45D2E"
        android:layout_marginTop="50dp"
        android:text=" SAVE &amp; CONTINUE"
        android:textSize="14dp"
        android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>